<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.proj.lucas.mercairsoft">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activitys.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activitys.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.CadastroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.MenuActivity"
            android:label="Produtos"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activitys.NovoProdutoActivity"
            android:label="Cadastre um Novo Produto"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.SobreActivity"
            android:label="Sobre o App"
            android:screenOrientation="portrait" />
        <activity android:name=".Activitys.DestalhesProdutosActivity"
            android:screenOrientation="portrait"
            android:label="Detalhes do Produto"></activity>
    </application>

</manifest>